<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/extended_window_background"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/login_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_drop_shadow"
            android:orientation="vertical">

            <EditText
                android:id="@+id/splash_emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_top"
                android:drawableLeft="@mipmap/ic_email"
                android:drawablePadding="14dp"
                android:ems="10"
                android:hint="@string/email_label"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#bebebe"
                android:textCursorDrawable="@null"/>

            <EditText
                android:id="@+id/splash_passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom"
                android:drawableLeft="@mipmap/ic_pass"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="@string/password_label"
                android:inputType="textPassword"
                android:padding="16dp"
                android:paddingLeft="16dp"
                android:textColor="#000"
                android:textColorHint="#bebebe"
                android:textCursorDrawable="@null"/>

        </LinearLayout>

        <TextView
            android:id="@+id/splash_forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/forgot_password"
            android:textColor="@color/main"/>

        <com.dd.CircularProgressButton
            android:id="@+id/splash_loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#FFF"
            app:cpb_cornerRadius="2dp"
            app:cpb_iconComplete="@mipmap/ic_action_done"
            app:cpb_iconError="@mipmap/ic_action_cancel"
            app:cpb_selectorIdle="@color/action"
            app:cpb_textIdle="@string/login_button"/>

    </LinearLayout>
</ScrollView>